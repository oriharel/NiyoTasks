<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/boxTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="@string/boxTitle"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/boxTitleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/addBox"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/nav_btn_selector"
        android:gravity="center"
        android:text="@string/add"
        android:textColor="@color/textColor" />

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:weightSum="5" >

        <EditText
            android:id="@+id/boxSearchEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:ems="10" >
        </EditText>

        <ImageButton
            android:id="@+id/boxSearchBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/nav_btn_selector"
            android:src="@drawable/ic_btn_search" />
    </LinearLayout>

    <com.google.android.maps.MapView
        android:id="@+id/boxMapView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:apiKey="0nHnZCjh1Wz9c8IhW-mvK1uPtudMEp-sYz-bqng"
        android:clickable="true"
        android:enabled="true" />

</LinearLayout>